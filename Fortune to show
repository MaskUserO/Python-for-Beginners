import random
#Random is a module where is bring some codes like random.radint
the_luckynumber = random.randint(1,30)
fortune_number = random.randint(1, 4)
fortune_text = ''

if fortune_number == 1:
    fortune_text = 'You willl have a great day!'
if fortune_number == 2:
    fortune_text = 'You willl have a nice day!'
if fortune_number == 3:
    fortune_text = 'You willl have a tough day!'
if fortune_number == 4:
    fortune_text = 'You willl have a slow day!'





print (F'{fortune_text} Your Lucky number is : {the_luckynumber}')

# The print is help as to see the result of the cod

